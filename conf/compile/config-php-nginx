./configure
    --prefix=/usr/local/php
    --with-config-file-path=/usr/local/php/etc
    --with-mysql=/usr/local/mysql
    --with-pdo-mysql=/usr/local/mysql
    --with-libxml-dir
    --with-pcre-dir=/usr/local/pcre
    --with-gd
    --with-jpeg-dir
    --with-png-dir
    --with-xpm-dir
    --with-gettext
    --with-freetype-dir
    --with-bz2
    --with-iconv-dir
    --with-zlib=/usr/local/zlib
    --with-zlib-dir=/usr/local/zlib
    --with-curl=/usr/local/curl
    --enable-fpm
    --with-fpm-user=www
    --with-fpm-group=www
    --enable-sockets
    --enable-soap
    --enable-magic-quotes
    --enable-gd-native-ttf
    --enable-gd-jis-conv
    --enable-ftp
    --enable-zip
    --enable-calendar
    --enable-mbstring
    --enable-exif
    --enable-fd-setsize=4096
    --enable-zend-multibyte
    --disable-ipv6
